{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "globals": {
    "__ENV": "readonly",
    "__VU": "readonly",
    "__ITER": "readonly",
    "SharedArray": "readonly"
  },
  "rules": {
    "indent": ["error", 2],
    // "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-alert": 2,
    "no-constant-condition": 2,
    "no-debugger": 2,
    "no-duplicate-imports": 2,
    "no-eq-null": 2,
    "no-irregular-whitespace": 2,
    // "no-unused-expressions": 2,
    "no-use-before-define": 2,
    "no-var": 2
  }
}
